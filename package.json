{
  "name": "vite-plugin-handlebars-precompile",
  "version": "1.0.1",
  "type": "module",
  "description": "A Vite plugin for precompiling Handlebars templates with HTML minification support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --ext .js,.ts --fix",
    "typecheck": "tsc --noEmit",
    "benchmark": "cd benchmark && npm install && npm run benchmark",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "keywords": [
    "vite",
    "plugin",
    "handlebars",
    "precompile",
    "template",
    "minification",
    "html",
    "build-tool"
  ],
  "author": "luckpoint <luckpoint@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luckpoint/vite-plugin-handlebars-precompile.git"
  },
  "bugs": {
    "url": "https://github.com/luckpoint/vite-plugin-handlebars-precompile/issues"
  },
  "homepage": "https://github.com/luckpoint/vite-plugin-handlebars-precompile#readme",
  "peerDependencies": {
    "handlebars": "^4.7.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "html-minifier-terser": "^7.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/handlebars": "^4.0.40",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.0.0",
    "handlebars": "^4.7.8",
    "rollup": "^4.0.0",
    "typescript": "^5.5.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
